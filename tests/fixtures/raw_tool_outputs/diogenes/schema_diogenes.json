{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Diogenes Backend Output",
  "description": "Raw output from Diogenes backend for Latin and Greek words",
  "type": "object",
  "properties": {
    "chunks": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "headword": {"type": "string"},
          "morphology": {
            "type": "object",
            "properties": {
              "morphs": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "stem": {"type": "array", "items": {"type": "string"}},
                    "tags": {"type": "array", "items": {"type": "string"}},
                    "defs": {"type": "array", "items": {"type": "string"}}
                  }
                }
              }
            }
          },
          "lemma": {"type": "string"},
          "pos": {"type": "string"}
        }
      }
    },
    "dg_parsed": {"type": "boolean"},
    "error": {"type": "string"}
  }
}